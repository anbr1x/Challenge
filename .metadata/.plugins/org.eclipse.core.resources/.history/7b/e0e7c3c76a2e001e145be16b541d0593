
public class cambio {
     public String SimbolMoneda = " ";
     public float FactordeCambio;
     public String MonedaConvertida = " ";

     public Object[] Conversion(String Cambioto) {
         // Aquie el switch case
    	 switch (Cambioto) {
    	    case "De Soles a Dólar":
    	    	MonedaConvertida = "Dolares";
    	        SimbolMoneda = "$";
    	        FactordeCambio = (float) 0.27477514;
    	        break;
    	    case "De Soles a Euro":
    	    	MonedaConvertida = "Euros";
    	        SimbolMoneda = "€";
    	        FactordeCambio = (float) 0.25300141;
    	        break;
    	    case "De Soles a Libra":
    	    	MonedaConvertida = "Libras";
    	        SimbolMoneda = "£";
    	        FactordeCambio = (float) 0.21701829;
    	        break;
    	    case "De Soles a Yen":
    	    	MonedaConvertida = "Yenes";
    	        SimbolMoneda = "£";
    	        FactordeCambio = (float) 39.356357;
    	        break;
    	    case "De Soles a Won Coreano":
    	    	MonedaConvertida = "Wones Coreanos";
    	        SimbolMoneda = "₩";
    	        FactordeCambio = (float) 355.05115 ;
    	        break;
    	    case "De Dólar a Soles":
    	    	MonedaConvertida = "Soles";
    	        SimbolMoneda = "S/";
    	        FactordeCambio = (float) 3.5869993;
    	        break;
    	    case "De Euro a Soles":
    	    	MonedaConvertida = "Soles";
    	        SimbolMoneda = "S/";
    	        FactordeCambio = (float) 3.9548752;
    	        break;
    	    case "De Libras a Soles":
    	    	MonedaConvertida = "Soles";
    	        SimbolMoneda = "S/";
    	        FactordeCambio = (float) 4.6077171;
    	    	break;
    	    case "De Yen a Soles":
    	    	MonedaConvertida = "Soles";
    	        SimbolMoneda = "S/";
    	        FactordeCambio = (float) 0.025408856;
    	    	break;
    	    case "De Won Coreano a Soles":
    	    	MonedaConvertida = "Soles";
    	        SimbolMoneda = "S/";
    	        FactordeCambio = (float) 0.0028164956;
    	    	break;
    	    default:
    	        System.out.println("Valor inválido");
    	}
    	 
    	 
    	 return new Object[] {SimbolMoneda, FactordeCambio, MonedaConvertida};
       

}
}
